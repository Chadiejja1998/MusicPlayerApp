<div class="music-player">
  <div class="cover">
    <img id="cover-image" src="default_cover.jpg" alt="Cover Image">
  </div>
  <div class="now-playing">
    <h2 id="track-title">Track Title</h2>
    <h3 id="track-artist">Track Artist</h3>
  </div>
  <div class="controls">
    <button id="prev"><i class="fas fa-backward"></i> Prev</button>
    <button id="play"><i class="fas fa-play"></i> Play</button>
    <button id="pause"><i class="fas fa-pause"></i> Pause</button>
    <button id="next">Next <i class="fas fa-forward"></i></button>
  </div>
</div>
